// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/* Minimal start: sirf User table.
   Baad me Deposit/Withdrawal/Tasks add karenge. */
model User {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  password   String?  // optional for now; baad me hash rakhenge
  balance    Int      @default(0)
  inviteCode String?  // baad me generate bhi kara sakte
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
